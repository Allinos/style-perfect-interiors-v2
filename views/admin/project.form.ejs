<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>STYLE PERFECT INTERIOR | Admin</title>

    <!-- CSS -->
    <link rel="stylesheet" href="../../css/admin/header.css">
    <link rel="stylesheet" href="../../css/darkMode.css">
    <link rel="stylesheet" href="../../css/admin/responsive.css">
    <link rel="stylesheet" href="../../css/admin/form.css">
    <link rel="stylesheet" href="sweetalert2.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="../../js/admin/dashboard.module.js"></script>

</head>

<body>
    <%- include('../partials/admin.header.ejs') %> 
        <!-- MAIN SECTION STARTS HERE  -->
        <main class="main" data-app-page="form">
            <div class="fcontainer">
                <!-- -----------NEW PROJECT------------ -->
                <!-- <div class="form-header">
                    <h4 class="uppercase" id="p-name">Normal Project</h4>
                    <div class="head-btns flex">
                        <button class="uppercase" onclick="toggleForm('normalForm', this)" id="Normal Project">default</button>
                    </div>
                </div> -->
                <div class="formContainer">
                    <div class="normalForm" id="normalForm">
                        <div class="field fname flex">
                            <label for="">Select an existing client</label>
                            <select name="" id="" onchange="getClientData(this)">
                                <option value="">Select client reference</option>
                                <% data?.length > 0 && data.forEach((ref)=> { %>
                                <option value="<%= ref.id %>"><%= ref.id %> | <%= ref.name %> ( <%= ref.location %> ) </option>
                                <% }) %>
                            </select>
                        </div>
                        <div class="field">
                            <button class="uppercase" id="newCli" onclick="showContactForm()">
                                <span>Add New Client</span>
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" id="plus-circle" class="svg">
                                    <path fill="##000000"
                                        d="M12,2A10,10,0,1,0,22,12,10,10,0,0,0,12,2Zm0,18a8,8,0,1,1,8-8A8,8,0,0,1,12,20Zm4-9H13V8a1,1,0,0,0-2,0v3H8a1,1,0,0,0,0,2h3v3a1,1,0,0,0,2,0V13h3a1,1,0,0,0,0-2Z">
                                    </path>
                                </svg>
                            </button>
                        </div>
                        <form id="np-form-data">
                            <div id="project-form" class="contactDetails hidden">
                                <h4 class="uppercase">contact details</h4>
                            <div id="contact-details-field" class="fgrid">
                                <div class="field">
                                    <label for="name">Name</label>
                                    <input type="text" name="name" id="name" placeholder="e.g.: Pragyan Tamuli">
                                </div>
                                <div class="field">
                                    <label for="cnumber">Contact Number</label>
                                    <input type="text" name="contactNo" id="contact" placeholder="e.g.: 9874561230">
                                </div>
                                <div class="field">
                                    <label for="altContact">Alternate Contact Number</label>
                                    <input type="text" name="altContact" id="contact2" placeholder="e.g.: 9874561230">
                                </div>
                                <div class="field">
                                    <label for="email">Email</label>
                                    <input type="text" name="email" id="email" placeholder="e.g.: styleperfect@gmail.com">
                                </div>
                                <div class="field">
                                    <label for="address">Address</label>
                                    <input type="text" name="city" id="location" placeholder="Address">
                                    <!-- <textarea name="city" id="address"></textarea> -->
                                </div>
                                <div class="field">
                                    <label for="address">Remarks</label>
                                    <input type="text" name="remarks" id="oth_details">
                                    <!-- <textarea name="remarks" id="remarks"></textarea> -->
                                </div>
                            </div>
                            </div>
                            <!-- ----------------------------------------------------------- -->
                            <h4 class="uppercase">project details</h4>
                            <div class="fgrid">
                                <div class="field">
                                    <label for="ref">Reference No</label>
                                    <input type="text" name="rfNo" id="ref">
                                </div>
                                <div class="field">
                                    <label for="workName">Name of The Project</label>
                                    <input type="text" name="workName" id="workName">
                                </div>
                                <div class="field">
                                    <label for="projectWork">Work Type</label>
                                    <div class="ldflex">
                                        <div class="type">
                                            <input type="checkbox" name="task" id="arch" value="1">
                                            <span>Interior</span>
                                        </div>
                                        <div class="type">
                                            <input type="checkbox" name="task" id="arch" value="2">
                                            <span>Execution</span>
                                        </div>
                                        <!-- <div class="type">
                                            <input type="checkbox" name="task" id="three" value="3">
                                            <span>3D</span>
                                        </div> -->
                                    </div>
                                </div>
                                <div class="field">
                                    <label for="amount">Total Amount</label>
                                    <input type="text" name="TotalAm" id="amount" placeholder="&#8377;">
                                </div>
                                <div class="field">
                                    <label for="amount">Advance Amount</label>
                                    <input type="text" name="agreementAm" id="amount" placeholder="&#8377;">
                                </div>
                                <div class="field">
                                    <label for="amount">Project deadline</label>
                                    <input type="text" name="npdeadline" id="amount" placeholder="dd/mm/yyyy, Eg:01/06/2024">
                                </div>
                            </div>
                            <!-- ---------- grid ends--------- -->
                            <div class="field">
                                <button data-datatype="new" type="submit" onclick="SubmitNormalFormData(event, this)" class="uppercase" id="form-submit-btn">submit</button>
                                <!-- <input type="submit" name="submit" id="" value="submit"> -->
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </main>
    </section>


    <!-- JAVASCRIPT -->
    <!-- <script src="/static/js/main.js"></script> -->
    <script src="/js/admin/form.js"></script>
    <script src="/js/admin/header.js"></script>
</body>

</html>