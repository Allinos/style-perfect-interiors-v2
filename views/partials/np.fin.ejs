<div class="accordion-content" data-dealId="<%= data.id %>">
    <div class="ahead finegrid">
        <p class="ref">
            <span class="uppercase hide block phead">Ref. No.</span>
            <span>
                <%= data?.ref %>
            </span>
        </p>
        <p class="pro">
            <span class="uppercase hide block phead">name of work</span>
            <span>
                <%= data.title %>
            </span>
        </p>
        <p class="emp_date">
            <span class="uppercase hide block phead">location</span>
            <span>
                <%= data.location %>
            </span>
        </p>
        <%  let totalAmountGot = 0 %>
        <%  (data.payments)?.forEach((e)=>{ %>
            <% totalAmountGot+= e.amount_got  %>
        <% }) %>
        <p class="totalf">
            <span class="uppercase hide block phead">project amount</span>
            &#8377;<span><%= data.total_amount %></span>/-
        </p>

        <p class="totalf none " >
            &#8377;<span><%= totalAmountGot %></span>/-
        <span class="maka">Received</span></p>
        
        <p class="totalf none">
            &#8377;<span><%= data.total_amount - totalAmountGot %></span>/-
        </p>
        <p class="arrow-down action-icons">
            <svg onclick="openDick({dealid:<%= data.id %>})" viewBox="0 0 48 48"  width="25" xmlns="http://www.w3.org/2000/svg"><path d="M38 6H10c-2.21 0-4 1.79-4 4v28c0 2.21 1.79 4 4 4h28c2.21 0 4-1.79 4-4V10c0-2.21-1.79-4-4-4zm-4 20h-8v8h-4v-8h-8v-4h8v-8h4v8h8v4z"/><path d="M0 0h48v48H0z" fill="none"/></svg>
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" id="angle-double-down"
                class="svg">
                <path fill="##000000"
                    d="M11.29,11.46a1,1,0,0,0,1.42,0l3-3A1,1,0,1,0,14.29,7L12,9.34,9.71,7A1,1,0,1,0,8.29,8.46Zm3,1.08L12,14.84l-2.29-2.3A1,1,0,0,0,8.29,14l3,3a1,1,0,0,0,1.42,0l3-3a1,1,0,0,0-1.42-1.42Z">
                </path>
            </svg>
        </p>
    </div>


    <!-- ----------open data for accordion---------- -->
    <div class="adata data">
        <!-- --INSTALLMENT-- -->
        <div class="finance_expand">
            <%  (data.payments)?.forEach((e)=>{ %>
            <div class="installment flex">
                <div class="field">
                    <p class="uppercase">amount</p>
                    <p class="amount"> <%= e.amount_got %></p>
                </div>
                <div class="field">
                    <p class="uppercase">Date</p>
                    <p class="date"> <%= e.dateofpay %></p>
                </div>
                <div class="field">
                    <p class="uppercase">Mode</p>
                    <p class="mode"> <%= e.modeofpay %></p>
                </div>
                <div class="field">
                    <button onclick="openEdit(this,<%= e.fid %>)">Edit</button>
                    <button onclick="deletePayments(this,<%= e.fid %>)">Delete</button>
                </div>
            </div>
            <% }) %>
        </div>
        <!-- ---------------  -->
    </div>
</div>